{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "lib": ["ES5", "ES6", "DOM", "DOM.Iterable"],
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
